<% layout('layouts/boilerplate') %>
       
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4 mt-1"></div>
<div class="container py-4">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4">
    <% for (let lists of listing) { %>
      <div class="col">
        <a href="/listings/<%= lists.id %>" class="text-decoration-none text-dark">
          <div class="card h-100 shadow-sm border-0 rounded-4 overflow-hidden main-card">
            <img 
              src="<%= lists.image.url %>" 
              alt="image for <%= lists.Name %>" 
              class="card-img-top object-fit-cover" 
              style="height: 16rem;"
            >
            <div class="card-body">
              <h5 class="card-title mb-2"><%= lists.Name %></h5>
              <p class="card-text text-muted mb-1"><strong>Description:</strong> <%= lists.description %></p>
              <p class="card-text text-muted"><strong>Game Name:</strong> <%= lists.gamename %></p>
            </div>
          </div>
        </a>    
      </div>
    <% } %>
  </div>
</div>




        
       
  
 
